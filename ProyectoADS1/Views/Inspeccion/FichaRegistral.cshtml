<div class="container mt-4" style="max-width: 900px; font-family: 'Cambria', serif; background-color: white; padding: 40px; box-shadow: 0 0 10px rgba(0,0,0,0.2); border-radius: 6px;">

    <div class="text-center mb-4">
        <h3 style="text-transform: uppercase; font-weight: bold;">Ficha de Inspección</h3>
        <hr style="border: 1px solid #000;">
    </div>

    <section class="mb-4">
        <h5 style="border-bottom: 2px solid #000; padding-bottom: 4px;">1. Detalles de la Inspección</h5>
        <table class="table table-borderless" style="font-size: 15px;">
            <tr>
                <td><strong>ID Inspección:</strong></td>
                <td>@Model.IdInspeccion</td>
                <td><strong>Estado:</strong></td>
                <td>@Model.Estado</td>
            </tr>
            <tr>
                <td><strong>Área Supervisada:</strong></td>
                <td colspan="3">@Model.AreaSupervisada</td>
            </tr>
            <tr>
                <td><strong>Fecha Programada:</strong></td>
                <td>@Model.FechaProgramada</td>
                <td><strong>Motivo de Inspección:</strong></td>
                <td>@Model.MotivoInspeccion</td>
            </tr>
        </table>
    </section>

    <section class="mb-4">
        <h5 style="border-bottom: 2px solid #000; padding-bottom: 4px;">2. Datos del Concesionario</h5>
        <table class="table table-borderless" style="font-size: 15px;">
            <tr>
                <td><strong>RUC:</strong></td>
                <td>@Model.Ruc</td>
                <td><strong>Nombre Comercial:</strong></td>
                <td>@Model.NombreComercial</td>
            </tr>
            <tr>
                <td><strong>Razón Social:</strong></td>
                <td colspan="3">@Model.RazonSocial</td>
            </tr>
            <tr>
                <td><strong>Dirección:</strong></td>
                <td colspan="3">@Model.Direccion</td>
            </tr>
            <tr>
                <td><strong>Departamento:</strong></td>
                <td>@Model.Departamento</td>
                <td><strong>Provincia:</strong></td>
                <td>@Model.Provincia</td>
            </tr>
            <tr>
                <td><strong>Teléfono:</strong></td>
                <td>@Model.Telefono</td>
                <td><strong>Email:</strong></td>
                <td>@Model.Email</td>
            </tr>
        </table>
    </section>

    <hr style="border: 1px solid #000;">

    <div class="d-flex justify-content-between mt-4">
        <div>
            <a class="btn btn-secondary" asp-action="Index">Regresar</a>
            <a class="btn btn-primary" asp-action="CrearActa" asp-controller="Acta" asp-route-id="@Model.IdInspeccion">
                Generar Acta de Inspección
            </a>
        </div>
        <div class="text-end">
            <em>Última actualización:</em><br>
            <strong>@Model.FechaActualizada</strong>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #f2f2f2;
    }

    .table-borderless td {
        padding: 6px 8px;
        vertical-align: top;
    }

    h5 {
        font-weight: bold;
        color: #333;
    }

    em, strong {
        color: #222;
    }
</style>
