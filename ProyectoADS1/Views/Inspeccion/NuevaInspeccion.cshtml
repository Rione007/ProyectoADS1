@model ProyectoADS1.Models.FichaInspeccion

@{
    ViewData["Title"] = "NuevaInspeccion";
}

<h2>NuevaInspeccion</h2>
<hr />
<div class="row">
    <div class="col-md-10">
        <div class="form-control">
            <div class="form-group col-md-3">
                <label asp-for="IdInspeccion" class="control-label"></label>
                <input value="@ViewBag.SiguienteId" class="form-control" readonly />
            </div>
        </div>

        <form asp-action="BuscarConcesionarioPorRuc" method="post">
            <div class="form-control col-md-7">
                <label asp-for="Ruc" class="control-label"></label>
                <div class="d-flex">
                    <input asp-for="Ruc" class="form-control" />
                    <button type="submit" class="btn btn-secondary col-md-3 ms-2">Buscar RUC</button>
                </div>
                <div>
                    @ViewBag.advertencia
                </div>
            </div>
        </form>

        <form asp-action="NuevaInspeccion" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-control">
                <h5>Datos de Concesionario:</h5>
                <div class="row g-3">
                    <input type="hidden" asp-for="IdConcesionario" class="form-control" />
                    <input type="hidden" asp-for="Ruc" class="form-control" />

                    <div class="row g-3">
                        <div class="form-group col-md-4">
                            <label asp-for="NombreComercial" class="control-label"></label>
                            <input asp-for="NombreComercial" class="form-control" readonly />
                            <span asp-validation-for="NombreComercial" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-4">
                            <label asp-for="RazonSocial" class="control-label"></label>
                            <input asp-for="RazonSocial" class="form-control" readonly />
                            <span asp-validation-for="RazonSocial" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group col-md-8">
                        <label asp-for="Direccion" class="control-label"></label>
                        <input asp-for="Direccion" class="form-control" readonly />
                        <span asp-validation-for="Direccion" class="text-danger"></span>
                    </div>
                    <div class="row g-3">
                        <div class="form-group col-md-4">
                            <label asp-for="Departamento" class="control-label"></label>
                            <input asp-for="Departamento" class="form-control" readonly />
                            <span asp-validation-for="Departamento" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-4">
                            <label asp-for="Provincia" class="control-label"></label>
                            <input asp-for="Provincia" class="form-control" readonly />
                            <span asp-validation-for="Provincia" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row g-3">
                        <div class="form-group col-md-4">
                            <label asp-for="Telefono" class="control-label"></label>
                            <input asp-for="Telefono" class="form-control" readonly />
                            <span asp-validation-for="Telefono" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-4">
                            <label asp-for="Email" class="control-label"></label>
                            <input asp-for="Email" class="form-control" readonly />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <br />
            </div>
            </div>
            <div class="form-control" >
                <h5>Detalles de Inspeccion:</h5>
                <div class="row g-3">
                    <div class="form-group col-md-7">
                        <label asp-for="AreaSupervisada" class="control-label"></label>
                        <input asp-for="AreaSupervisada" class="form-control" required/>
                        <span asp-validation-for="AreaSupervisada" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-5">
                        <label asp-for="FechaProgramada" class="control-label"></label>
                        <input type="date" asp-for="FechaProgramada" class="form-control" required/>
                        <span asp-validation-for="FechaProgramada" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="MotivoInspeccion" class="control-label"></label>
                        <textarea asp-for="MotivoInspeccion" class="form-control" rows="3"> </textarea>
                        <span asp-validation-for="MotivoInspeccion" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <hr />
            <div>
                @ViewBag.mensaje
            </div>
            <hr />
            <div class="form-group d-flex">
                <input type="submit" value="Agregar" class="btn btn-success" />
                <div>
                    <a class="btn btn-secondary" asp-action="Index">Regresar</a>
                </div>
                <div>
                    <a class="btn btn-primary" asp-action="NuevaInspeccion">Limpiar</a>
                </div>

            </div>
        </form>
    </div>
</div>


