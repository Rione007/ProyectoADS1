@model IEnumerable<ProyectoADS1.Models.FichaInspeccion>

@{
    ViewData["Title"] = "Index";
}

<h3>Programa de Supervision y Control Postal</h3>

<p>
    <a class="btn btn-success" asp-action="NuevaInspeccion">Añadir Nueva Inspeccion</a>
    <a class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#ModalDetalles">Detalles</a>
</p>
<div>
    <em>Ingrese RUC,Estado o Departamento:</em>
    <input class="col-md-3"/>
    <button class="btn btn-secondary">Filtrar</button>
</div>
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdInspeccion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ruc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NombreComercial)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Departamento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Provincia)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.AreaSupervisada)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaProgramada)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th>
                @Html.DisplayName("Ficha Registral")
            </th>
            <th>Archivos Adjuntos</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdInspeccion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ruc)                
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NombreComercial)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Departamento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Provincia)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.AreaSupervisada)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaProgramada)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td class="">
                <a class="btn btn-sm btn-info" asp-action="FichaRegistral" asp-route-id="@item.IdInspeccion">Ver Ficha</a>
            </td>
            <td class="d-flex">
                    <a class="btn btn-secondary" asp-action="ActaDeInspeccion" asp-controller="Acta" asp-route-id="@item.IdInspeccion">Acta</a> |
                    <a class="btn btn-secondary" asp-action="InformeDeInspeccion" asp-controller="Informe" asp-route-id="@item.IdInspeccion">Informe</a> |
                    <a class="btn btn-secondary" asp-action="CrearMemo" asp-controller="Memorandum" asp-route-id="@item.IdInspeccion">Memorandum</a>
            </td>
        </tr>
}
    </tbody>
</table>

<div class="modal fade" id="ModalDetalles" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Detalles:</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body col-md-12">
                <div class="form-control">
                    <em>
                        Total de inspecciones por Departamento:
                    </em>
                    <div class="form-group d-flex">
                        
                        <select class="form-control ">
                            <option selected disabled>--Seleccione Departamento--</option>
                            <option>La Libertad</option>
                            <option>Lima</option>
                            <option>Huanuco</option>
                        </select>
                    </div>
                    <div class="col-md-4">Total: 3</div>
                </div>
                <hr />
                <div class="form-control">
                    <em>
                        Total de inspecciones :
                    </em>
                    <div class="col-md-4">100</div>
                </div>



            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>
