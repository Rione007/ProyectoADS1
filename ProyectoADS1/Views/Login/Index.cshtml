@{
    Layout = null;
    ViewData["Title"] = "Iniciar Sesión";
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProyectoADS1.styles.css" asp-append-version="true" />
</head>

<h2 class="text-center mt-4">Iniciar Sesión</h2>

<div class="d-flex justify-content-center mt-4">
    <form method="post" class="border p-4 rounded shadow-sm" style="width: 350px;">
        <div class="form-group mb-3">
            <label for="correo">Correo</label>
            <input type="email" class="form-control" id="correo" name="correo" placeholder="Ingrese su correo" required />
        </div>

        <div class="form-group mb-3">
            <label for="password">Contraseña</label>
            <input type="password" class="form-control" id="password" name="password" placeholder="Ingrese su contraseña" required />
        </div>

        <button type="submit" class="btn btn-primary w-100">Entrar</button>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger mt-3 text-center">@ViewBag.Error</div>
        }
    </form>
</div>
